<main aria-label="Main Content" id="sub_page">
    <section class="list-section" aria-label="Songs">
        <div class="list-grid" aria-label="Songs Grid">
            {% for song in songs %}
            <div class="list-card" onclick="playSong('{{song.song_name}}', '{{song.artist_name}}')" aria-label="Play Song {{song.song_name}} By {{song.artist_name}}">
                {% if loop.index < 10 %}
                <h3 class="noselect">0{{loop.index}}</h3>
                {% else %}
                <h3 class="noselect">{{loop.index}}</h3>
                {% endif %}
                <div class="list-image-container" onclick="playSong('{{song.song_name}}', '{{song.artist_name}}')">
                    <span class="cover-wrapper"
                        data-img-src="/api/images/song?artist_name={{ song.artist_uri }}&song_name={{ song.song_uri }}">
                        <i class="fas fa-music fallback-icon" style="display: inline-block;"></i>
                    </span>
                </div>
                <h3 class="list-card-name noselect">{{song.song_name}}</h3>
            </div>
            {% endfor %}
        </div>
    </section>
</main>