{% extends "base" %}

{% block title %}
{{ song.title }}
{% endblock %}

{% block content %}
<!-- Song Header -->
<div class="text-center mb-8">
    <h1 class="text-4xl font-bold text-indigo-600">{{ song.title }}</h1>
    <p class="text-lg text-gray-400">{{ song.artist }}</p>
</div>

<!-- Audio Player -->
<div class="flex justify-center mb-8">
    <audio controls class="w-full max-w-lg bg-gray-200 rounded-lg shadow-md">
        {% if device_type == 'mobile' %}
        <source src="{{ song.audio_url }}.aac" type="audio/aac">
        {% else %}
        <source src="{{ song.audio_url }}.mp3" type="audio/mp3">
        {% endif %}
        Your browser does not support the audio element.
    </audio>
</div>

<!-- Song Description -->
<div class="mt-8 max-w-2xl mx-auto">
    <h2 class="text-2xl font-semibold text-gray-100">Song Description</h2>
    <p class="text-lg text-gray-400 mt-4">{{ song.description }}</p>
</div>

<!-- Additional Info -->
<div class="mt-8 max-w-2xl mx-auto">
    <h3 class="text-xl font-medium text-gray-100">Album</h3>
    <p class="text-lg text-gray-400 mt-2">{{ song.album }}</p>
</div>
{% endblock %}
