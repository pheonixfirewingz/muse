{% extends "base.jinja" %}
{% block content %}
<main aria-label="Main Content" id="sub_page">
    <section class="music-section" aria-label="Artists">
        <div class="music-grid" aria-label="Artists Grid">
            {% for artist in artists %}
            <div class="card"
                 role="button"
                 onclick="setPageQueryArtist('{{ artist.name }}')"
                 aria-label="{{ artist.name }}"
                 style="cursor: pointer;">
                <div class="image-container">
                    <div class="loading-spinner"></div>
                    <i class="fas fa-user fallback-icon"></i>
                    <img src=""
                         alt="{{ artist.name }}"
                         onerror="this.style.display='none'; this.previousElementSibling.style.display='block';">
                </div>
                <h3>{{ artist.name }}</h3>
            </div>
            {% endfor %}
        </div>
    </section>
</main>
{% endblock %}