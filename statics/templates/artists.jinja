<main aria-label="Main Content" id="sub_page">
    <section class="music-section" aria-label="Artists">
        {% if artist_data|length > 0 %}
        <div class="music-grid" aria-label="Artists Grid">
            {% for artist in artist_data %}
            <div class="card"
                 role="button"
                 onclick="setPageQueryArtist('{{ artist.name }}')"
                 aria-label="{{ artist.name }}"
                 style="cursor: pointer;">
                <div class="image-container">
                    <span class="cover-wrapper"
                          data-img-src="/api/images/artist?artist_name={{ artist.uri_name }}">
                          <i class="fas fa-music fallback-icon" style="display: inline-block;"></i>
                    </span>
                </div>
                <h3>{{ artist.name }}</h3>
            </div>
            {% endfor %}
        </div>
        {% else %}
        <div class="empty-state" style="text-align: center; padding: 2rem; color: #666;">
            <i class="fas fa-user-music" style="font-size: 3rem; margin-bottom: 1rem; opacity: 0.5;"></i>
            <p style="font-size: 1.2rem;">No artists registered in the database</p>
        </div>
        {% endif %}
    </section>
</main>